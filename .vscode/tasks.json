{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create a new post <title>",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "post",
                "--", // separator
                "${input:title}"
            ],
        },
        {
            "label": "Remove generated files and cache.",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "clean",
            ]
        }
    ],
    "inputs": [
        {
            "id": "title",
            "description": "Title of the new post",
            "type": "promptString"
        }
    ]
}